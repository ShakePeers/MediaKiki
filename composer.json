{
  "name": "shakepeers/shakepeers-mediawiki",
  "description": "MediaWiki setup for shakepeers.org",
  "license": "GPL-3.0",
  "type": "project",
  "homepage": "https://shakepeers.org/Accueil",
  "authors": [
    {
      "name": "Pierre Rudloff",
      "email": "contact@rudloff.pro",
      "homepage": "https://www.rudloff.pro/",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "contact@shakepeers.org",
    "issues": "https://github.com/ShakePeers/shakepeers-mediawiki/issues",
    "source": "https://github.com/ShakePeers/shakepeers-mediawiki"
  },
  "replace": {
    "rudloff/mediawiki-composer": "~0.1.3"
  },
  "require": {
    "mediawiki/core": "~1.27.0",
    "mediawiki/Vector": "~1.27.0",
    "composer/installers": "~1.2.0",
    "mediawiki/WikiEditor": "~1.27.0",
    "mediawiki/LiquidThreads": "~1.27.0",
    "mediawiki/CategoryTree": "~1.27.0",
    "mediawiki/Cite": "~1.27.0",
    "mediawiki/MaintenanceShell": "~1.27.0",
    "mediawiki/Nuke": "~1.27.0",
    "mediawiki/Renameuser": "~1.27.0",
    "mediawiki/intersection": "~1.27.0",
    "mediawiki/InputBox": "~1.27.0",
    "mediawiki/LabeledSectionTransclusion": "~1.27.0",
    "mediawiki/ParserFunctions": "~1.27.0",
    "troyengel/preloader": "~1.2.2",
    "mediawiki/EtherpadLite": "~1.27.0",
    "mediawiki/RSS": "~1.27.0",
    "mediawiki/WikiArticleFeeds": "~1.27.0",
    "mediawiki/Lockdown": "~1.27.0",
    "shakeepers/shakepeers-skin": "dev-develop",
    "mediawiki/Echo": "~1.27.0",
    "mediawiki/EventLogging": "~1.27.0",
    "mediawiki/GuidedTour": "~1.27.0",
    "mediawiki/Duplicator": "~1.27.0",
    "mediawiki/header-footer": "~2.2.0",
    "mediawiki/UserMerge": "~1.27.0",
    "mediawiki/ConfirmEdit": "~1.27.0",
    "shakeepers/page-creator": "~0.3.0",
    "mediawiki/Variables": "~1.27.0",
    "mediawiki/bootstrap-skin": "dev-master",
    "mediawiki/Math": "~1.27.0",
    "mediawiki/TextExtracts": "~1.27.0",
    "mediawiki/Description2": "~1.27.0",
    "mediawiki/OpenGraphMeta": "~1.27.0",
    "mediawiki/CheckUser": "~1.27.0",
    "shakeepers/sitelinks-search-box": "~0.1.0",
    "shakeepers/breadcrumb-list": "~0.1.0",
    "mediawiki/PdfHandler": "~1.27.0",
    "mediawiki/VisualEditor": "~1.27.0",
    "mediawiki/BetaFeatures": "~1.27.0",
    "mediawiki/TwitterCards": "~1.27.0",
    "shakeepers/page-contributors": "~0.1.0",
    "shakeepers/hide-namespace": "~1.4.3",
    "shakeepers/paypal": "~1.0.2",
    "mediawiki/TemplateData": "~1.27.0",
    "mediawiki/piwik-integration": "~2.4.2",
    "shakepeers/no-toc": "~0.1.0",
    "mediawiki/BlockAndNuke": "~1.27.0",
    "mediawiki/MultimediaViewer": "~1.27.0"
  },
  "require-dev": {
    "symfony/var-dumper": "~3.1.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://mwpackagist.netlib.re/"
    },
    {
      "type": "package",
      "package": {
        "name": "mediawiki/bootstrap-skin",
        "version": "dev-master",
        "source": {
          "url": "https://github.com/borkweb/bootstrap-mediawiki.git",
          "type": "git",
          "reference": "master"
        },
        "type": "mediawiki-skin"
      }
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "ln -sfn ../../ vendor/mediawiki/core/vendor",
      "rm -r vendor/mediawiki/core/skins",
      "ln -sfn ../../../skins/ vendor/mediawiki/core/skins",
      "rm -r vendor/mediawiki/core/extensions",
      "ln -sfn ../../../extensions/ vendor/mediawiki/core/extensions",
      "ln -sfn ../../../composer.lock vendor/mediawiki/core/composer.lock",
      "cd extensions/VisualEditor && git submodule update --init"
    ],
    "updatedb": "php vendor/mediawiki/core/maintenance/update.php --conf LocalSettings.php"
  }
}
